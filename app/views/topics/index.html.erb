<h1>Topics</h1>
<ul>
  <% @topics.each do |topic| %>
    <li><%= link_to topic.title, topics_show_path(topic.id) %></li>
  <% end %>
</ul>

<h1>Create Topic</h1>
<%= form_with model: @user, url: topics_path,class: 'topic-new', local: true do |f| %>
  <%= f.text_field :title %>
  <%= f.submit %>
<% end %>